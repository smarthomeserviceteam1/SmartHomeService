<script type="text/javascript" language="Javascript">
    $(document).ready(function () {
        $("#button").click(function (e) {
            var formdata = $('#SessionForm').serialize();
/*            $.ajax({
                url: http://localhost:3474/api/GarageDoorREST
                DataType: JSON
                data: formdata
            }).done(function(){alert("ajax done")})
              .fail(function(){alert("ajax failed")});
              */
            $.ajax({
                url: 'http://localhost:3474/api/GarageDoorREST',
                type: 'GET',
                dataType: 'JSON',
                data: formdata,
                success: function (data, textStatus, xhr) {
                    if (textStatus == 'success') {
                        alert(data.SessionID + '  ' + data.SecretKey);
                        RefreshMain(data.SessionID, data.SecretKey);
                    } else {
                        alert('data error')
                    }
                },
                error: function(xhr, textStatus, errorThrown) {
                    alert('ajax error')
                }
            }); 

            e.preventDefault();
        });

        function RefreshMain(sessionID, secretKey)
        {
            alert('RefreshMain')
            $.ajax({
                url: 'http://localhost:3474/Home/RequestSession',
                type: 'POST',
                datatype: 'JSON',
                data: {SessionID: sessionID, SecretKey: secretKey},
                success: function (data, textStatus, xhr) {
                    if (textStatus == 'success') {
                        alert(data.Hash);
                    } else {
                        alert('Refresh data error')
                    }
                },
                error: function(xhr, textStatus, errorThrown) {
                    alert('Refresh ajax error')
                }
        });
        }

    });
</script>

